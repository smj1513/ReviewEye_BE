{
  "analysis": {
    "tokenizer": {
      "nori_tokenizer": {
        "type": "nori_tokenizer"
      },
      "ngram_tokenizer": {
        "type": "ngram",
        "min_gram": 2,
        "max_gram": 3,
        "token_chars": [
          "letter",
          "digit"
        ]
      }
    },
    "filter": {
      "nori_part_of_speech": {
        "type": "nori_part_of_speech"
      },
      "initial_sound_filter": {
        "type": "pattern_replace",
        "pattern": "(.)[^가-힣]*",
        "replacement": "$1"
      }
    },
    "analyzer": {
      "nori_analyzer": {
        "type": "custom",
        "tokenizer": "nori_tokenizer",
        "filter": [
          "lowercase",
          "nori_part_of_speech",
          "initial_sound_filter"
        ]
      },
      "ngram_analyzer": {
        "type": "custom",
        "tokenizer": "ngram_tokenizer",
        "filter": [
          "lowercase",
          "initial_sound_filter"
        ]
      }
    }
  }
}

