{
  "analysis": {
    "tokenizer": {
      "nori_tokenizer": {
        "type": "nori_tokenizer",
        "decompound_mode": "mixed"
      }
    },
    "filter": {
      "nori_part_of_speech": {
        "type": "nori_part_of_speech"
      },
      "my_synonym": {
        "type": "synonym",
        "synonyms": [
          "썬,선",
          "마녀,마녀공장",
          "공장,마녀공장"
        ]
      },
      "remove_non_korean": {
        "type": "pattern_replace",
        "pattern": "[^a-zA-Z0-9가-힣]",
        "replacement": ""
      }
    },
    "analyzer": {
      "nori_analyzer": {
        "type": "custom",
        "tokenizer": "nori_tokenizer",
        "filter": [
          "remove_non_korean",
          "my_synonym"
        ]
      }
    }
  }
}

