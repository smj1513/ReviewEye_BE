{
  "index": {
    "max_ngram_diff": 4
  },
  "analysis": {
    "tokenizer": {
      "nori_tokenizer": {
        "type": "nori_tokenizer",
        "user_dictionary": "Cosmetic.txt"
      },
      "n_gram_tokenizer": {
        "type": "ngram",
        "min_gram": 2,
        "max_gram": 5,
        "token_chars": [
          "letter",
          "digit"
        ]
      }
    },
    "filter": {
      "nori_part_of_speech": {
        "type": "nori_part_of_speech"
      },
      "my_synonym": {
        "type": "synonym",
        "synonyms": [
          "썬,선"
        ]
      },
      "remove_spec_char": {
        "type": "pattern_replace",
        "pattern": "[^a-zA-Z0-9가-힣]",
        "replacement": ""
      },
      "shingle": {
        "type": "shingle",
        "min_shingle_size": 2,
        "max_shingle_size": 4
      },
      ""
    },
    "analyzer": {
      "nori_analyzer": {
        "type": "custom",
        "tokenizer": "nori_tokenizer",
        "filter": [
          "nori_part_of_speech",
          "remove_spec_char",
          "my_synonym"
        ]
      },
      "n_gram_analyzer": {
        "type": "custom",
        "tokenizer": "n_gram_tokenizer",
        "filter": [
          "lowercase",
          "remove_spec_char"
        ]
      },
      "trigram": {
        "type": "custom",
        "tokenizer": "standard",
        "filter": [
          "lowercase",
          "shingle"
        ]
      }
    }
  }
}